@{
    ViewData["Title"] = "Make a Transaction";
}

<div class="container mt-5">
    <h2 class="text-center">Make a transaction</h2>
    <hr />
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Error"]
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 p-4">
                <form method="post" asp-controller="Transactions" asp-action="CreateTransaction">
                    <div class="mb-3">
                        <label for="emailToUser" class="form-label">Recipient Email:</label>
                        <input type="email" id="emailToUser" name="emailToUser" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="txtTotalAmount" class="form-label">Amount:</label>
                        <input type="number" id="txtTotalAmount" name="txtTotalAmount" class="form-control" required min="1" step="0.01" />
                    </div>
                    <button type="submit" class="btn btn-success w-100">Submit</button>
                </form>
                <a asp-action="Principal" asp-controller="Home" class="btn btn-custom-1 btn-lg>">Return</a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-image: url('https://www.pixelstalk.net/wp-content/uploads/images6/Cute-Dark-Wallpaper-Anime-620x620.jpg');
        background-size: cover;
        background-position: center;
    }
    .container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }
    .btn-lg {
        padding: 10px 20px;
        font-size: 1.1rem;
    }
    .card-title {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }
    .card-text {
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }
    .text-muted {
        color: #6c757d !important;
    }
    .shadow-lg {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .btn-custom-1 {
        background-color: #665d73;
        border-color: #665d73;
        color: #ffffff;
    }
        .btn-custom-1:hover {
            background-color: #665d73;
            border-color: #665d73;
        }
</style>