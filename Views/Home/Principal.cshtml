@{
    ViewData["Title"] = "Principal Page";
}
<div class="container mt-5">
    <h2 class="text-center mb-4">Welcome, @ViewBag.User.Name</h2>
    <hr class="mb-5" />
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-lg border-0 h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title font-weight-bold">Check balance</h5>
                        <p class="card-text text-muted">View your current account balance.</p>
                    </div>
                    <a asp-action="Balance" asp-controller="Transactions" class="btn btn-custom-1 btn-lg">View balance</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-lg border-0 h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title font-weight-bold">Transaction</h5>
                        <p class="card-text text-muted">Send money safely and securely.</p>
                    </div>
                    <a asp-action="Create" asp-controller="Transactions" class="btn btn-custom-2 btn-lg">New transaction</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-lg border-0 h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title font-weight-bold">Transaction history</h5>
                        <p class="card-text text-muted">View your transaction history.</p>
                    </div>
                    <a asp-action="Index" asp-controller="Transactions" class="btn btn-custom-3 btn-lg">Banking history</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-image: url('https://www.pixelstalk.net/wp-content/uploads/images6/Cute-Dark-Wallpaper-Anime-620x620.jpg'); 
        background-size: cover; 
        background-position: center; 
    }
    .container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    }
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }
    .btn-lg {
        padding: 10px 20px;
        font-size: 1.1rem;
    }
    .card-title {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }
    .card-text {
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }
    .text-muted {
        color: #6c757d !important;
    }
    .shadow-lg {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .btn-custom-1 {
        background-color: #ff6f61; 
        border-color: #ff6f61;
        color: #ffffff;
    }
        .btn-custom-1:hover {
            background-color: #ff3b2f;
            border-color: #ff3b2f;
        }
    .btn-custom-2 {
        background-color: #6b5b95;
        border-color: #6b5b95;
        color: #ffffff;
    }
        .btn-custom-2:hover {
            background-color: #524a7a;
            border-color: #524a7a;
        }
    .btn-custom-3 {
        background-color: #88b04b; 
        border-color: #88b04b;
        color: #ffffff;
    }
        .btn-custom-3:hover {
            background-color: #6d8e3a;
            border-color: #6d8e3a;
        }
</style>