@{
    ViewData["Title"] = "Create User Page";
}
<div class="container mt-5">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Error"]
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-lg border-0 h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <form asp-action="Register" method="post">
                            <div>
                                <label for="email">Email:</label>
                                <input type="text" id="password" name="Email" class="form-control" required />
                            </div>
                            <div>
                                <label for="password">Password:</label>
                                <input type="password" id="password" name="password" class="form-control" required />
                            </div>
                            <div>
                                <label for="nombre">Name:</label>
                                <input type="text" id="name" name="name" class="form-control" required />
                            </div>
                            <div>
                                <label for="Capital">Capital:</label>
                                <input type="text" id="capital" name="capital" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-custom-1 btn-lg">Signup</button>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-image: url('https://www.pixelstalk.net/wp-content/uploads/images6/Cute-Dark-Wallpaper-Anime-620x620.jpg'); 
        background-size: cover; 
        background-position: center;
    }
    .container {
        background-color: rgba(255, 255, 255, 0.9); 
        padding: 20px;
        border-radius: 10px; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    }
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }
    .btn-lg {
        padding: 10px 20px;
        font-size: 1.1rem;
    }
    .card-title {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }
    .card-text {
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }
    .text-muted {
        color: #6c757d !important;
    }
    .shadow-lg {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .btn-custom-1 {
        background-color: #ff9933;
        border-color: #ff9933;
        color: #ffffff;
    }
        .btn-custom-1:hover {
                background-color: #ff9933;
                border-color: #ff9933;
        }
</style>